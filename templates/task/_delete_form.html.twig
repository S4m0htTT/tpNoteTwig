<form method="delete" action="{{ path('app_task_delete', {'id': task.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
    <button class="btn btn-lg btn-danger" style="border-radius: 8px; padding: 10px 20px;">
        Supprimer
    </button>
</form>