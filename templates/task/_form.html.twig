{{ form_start(form) }}
<div class="mb-3">
    {{ form_label(form.title) }}
    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.title) }}
</div>

<div class="mb-3">
    <span>Tâche terminée :</span>
    {{ form_widget(form.status, {'attr': {'class': 'form-check-input'}}) }}
    {{ form_errors(form.status) }}
</div>

<div class="mb-3">
    {{ form_label(form.description) }}
    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.description) }}
</div>

<div class="mb-3">
    {{ form_widget(form.created_at, {'attr': {'class': 'form-control', 'style': 'display: none;'}}) }}
</div>

<button class="btn btn-primary">{{ button_label|default('Sauvegarder') }}</button>
{{ form_end(form) }}